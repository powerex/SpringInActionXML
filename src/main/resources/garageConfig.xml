<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bike"  class="ua.azbest.garage.Bicycle" />

    <bean id="childbike"  class="ua.azbest.garage.Bicycle" >
        <constructor-arg value="3" />
    </bean>

    <bean id="beep"
          class="ua.azbest.garage.BuzzerBeep" />

    <bean id="modernBike" class="ua.azbest.garage.BuzzBicycle">
        <!--<constructor-arg value="4" />-->
        <constructor-arg ref="beep" />
    </bean>

    <bean id="theRoad"
          class="ua.azbest.garage.Road"
          factory-method="getInstance" />

    <bean id="ticket"
          class="ua.azbest.garage.ParkingTicket"
          scope="prototype" />

    <bean id="box"
          class="ua.azbest.garage.GarageBox"
          init-method="turnOnLights"
          destroy-method="turnOffLights"/>

</beans>